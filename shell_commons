# Contains aliases common to all shells.

numlockx on
alias ls='ls --color -h --group-directories-first'
alias sl='ls'
alias tst='ping www.google.com'
alias la='ll -a'

alias py="ipython --autoindent --automagic --banner --pprint --no-confirm-exit"
alias zrc='vim ~/projects/dotfiles/.zshrc;source ~/.zshrc'
alias vrc='vim ~/projects/dotfiles/.vimrc'


alias noproxy='export {http,https,ftp,socks}_proxy=""'
alias setproxy='export {http,https,ftp,socks}_proxy="http://proxy.iiit.ac.in:8080"'
alias err='echo $?'
setproxy

alias tmux="tmux -2"
alias youtube-dl='youtube-dl -o"%(title)s.%(ext)s"'

# FUNCTIONS


mk () {
    mkdir -p "$*"
    cd "$*"
}

. /etc/profile.d/vte.sh
. /home/Aaditya/Public/z/z.sh
